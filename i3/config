# Mod1 is Alt key.
# Mod4 is Windows key. On HHKB, there is no windows key by default.
set $mod Mod1

# font for window titles. ISO 10646 = Unicode
font pango: Ubuntu Mono 10

# solarized colors
set $base03   #002b36
